<hader>
<h1>finstagram</h1>
<main role="main">
<%@finstagram_posts.each do|finstagram_post|%>
    <article class="finstagram-post">
        <div class="user-info">
            <img src="<%=finstagram_post[:avatar_url]%>" alt="<%=finstagram_post[:username]%>">
            <h2><%=finstagram_post[:username]%></h2>
            <h3><%=finstagram_post[:humanized_time_ago]%></h3>
        </div>
        <a class="photo" href="#">
            <img src="<%=finstagram_post[:img_url]%>" alt="finstagram post from<%=finstagram_post[:username]%>">

        </a>
        <div class="actions">
           <%=finstagram_post[:total_likes]%> likes
            <span class="comment-count"><%=finstagram_post[:total_comments]%>comments</span>
        </div>
        <ul class="comments">
        <%finstagram_post[:comments].each do|comment|%>
            <li>
                <p>
                    <%=comment[:username]%>:<%=comment[:text]%>
                </p>
            </li>
            <% end %>
        </ul>
    </article>
    <% end %>
</main>